{
  "name": "@graviola/edb-resizable-drawer",
  "version": "0.2.3",
  "description": "A mouse and touch resizable drawer",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "depcheck": "depcheck",
    "build": "tsup src/index.tsx --format esm,cjs --dts --external react",
    "dev": "tsup src/index.tsx --format esm,cjs --watch --dts --external react",
    "lint": "eslint \"**/*.ts*\"",
    "lint-fix": "eslint --fix \"**/*.ts*\"",
    "test": "jest",
    "test:watch": "jest --watch --color",
    "test:coverage": "jest --coverage",
    "doc": "typedoc"
  },
  "devDependencies": {
    "@graviola/edb-core-types": "workspace:*",
    "@graviola/edb-tsconfig": "workspace:*",
    "@graviola/edb-tsup-config": "workspace:*",
    "@types/jest": "^29.5.12",
    "eslint-config-edb": "workspace:*",
    "typescript": "^5.8.2",
    "react": "^18"
  },
  "peerDependencies": {
    "@mui/material": "^5",
    "@mui/styles": "^5",
    "react": "^18"
  },
  "dependencies": {
    "zustand": "^4.5.2"
  }
}
